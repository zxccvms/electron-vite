	"scripts": {
		"start": "ts-node config/scripts/start.ts",
		"start-main": "ts-node config/scripts/start-main.ts",
		"start-renderer": "ts-node config/scripts/start-renderer.ts",
		"build": "rimraf ./dist && ts-node config/scripts/build.ts",

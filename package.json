		"minimist": "^1.2.6",
		"prettier": "^2.6.2",
		"rimraf": "^3.0.2",
		"rollup-plugin-copy": "^3.4.0",
		"ts-node": "^10.7.0",
		"tslib": "^2.3.1",
		"typescript": "^4.6.3",
		"typescript-plugin-css-modules": "^3.4.0",
		"vite": "^2.9.5"
